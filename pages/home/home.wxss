/* pages/home/home.wxss */

.swiperView image{
  width: 100%;
}
.swiperView{
  margin-bottom: 30rpx;
}
.topView {
  height: 50rpx;
  padding: 20rpx 10rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  background-color: rgb(255, 255, 116);
}

.topView icon {
  margin-top: 5rpx;
}

.searchView {
  width: 100%;
  margin: 5rpx;
  height: 50rpx;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  background-color: seashell;
}

.searchView icon {
  margin-top: 5rpx;
  line-height: 50rpx;
  width: 60rpx;
  float: left;
  display: block;
}

.searchView input {
  float: left;
  display: block;
}

.topType {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
justify-content: space-around;
  height: 250rpx;
}

.topType navigator {
  align-items: center;
  display: flex;
  flex-direction: column;
  width: 30%;
  justify-content: space-around;
  background-color: seashell;
  font-size: 30rpx;
}

.topType image {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}
.imgView image{

  width: 100%;
  height:380rpx;
}